{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "factoryName": {
            "type": "string",
            "metadata": "The name of data factory can contain only letters, numbers and hyphens. The first and last characters must be a letter or number. Spaces are not allowed."
        },

    "location": {
          "type": "string",
            "metadata": {
            "description": "Location of your resources. Default location is eastUS"
            }
         },
     "resourceGroupNameForKeyVault": {
          "type": "string",
          "metadata": {
            "description": "Specifies the resource group name to get the application id in keyvault."
          }
    },

    "secretName": {
          "type": "string",
          "metadata": {
            "description": "Specifies the name of the secret that you want to create."
          }
    },
    "secretValue": {
          "type": "securestring",
          "metadata": {
            "description": "Specifies the value of the secret that you want to create."
          }
    },
    "keyVaultName": {
          "type": "string",
          "metadata": {
            "description": "Specifies the name of the key vault."
            }
        },    

  },
  "resources": [
       {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2016-10-01",
            "name": "[parameters('keyVaultName')]",
            "location": "[parameters('location')]",
            "tags": {},
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "Standard"
                },
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": [
                    {
                        "tenantId": "[subscription().tenantId]",
                        "objectId": "[reference(ResourceId(parameters('resourceGroupNameForKeyVault'), 'Microsoft.DataFactory/factories', parameters('factoryName')),'2018-06-01','Full').identity.principalId]",
                        "permissions": {
                            "keys": [],
                            "secrets": [
                                "Get"
                            ],
                            "certificates": []
                        }
                    }
                ],
                "enabledForDeployment": false,
                "enabledForDiskEncryption": false,
                "enabledForTemplateDeployment": false,
                "enableSoftDelete": true
            },
            "dependsOn":[
                "[parameters('factoryName')]"
            ]
        },

    {
          "type": "Microsoft.KeyVault/vaults/secrets",
          "apiVersion": "2019-09-01",
          "name": "[concat(parameters('keyVaultName'), '/', parameters('secretName'))]",
          "location": "[parameters('location')]",
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
          ],
          "properties": {
            "value": "[parameters('secretValue')]"
          }
        },

  ]
}
